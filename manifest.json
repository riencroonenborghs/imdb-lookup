{
  "manifest_version": 2,

  "name": "imdbLookup",
  "description": "Right-click on links, or highlight a text on a webpage, and look it up on IMDB.",
  "version": "0.0.1",
  "browser_action": {
    "default_icon": "app/assets/images/app.png"
  },
  "background": {
    "scripts": ["app/assets/javascripts/build/background.js"]
  },
  "permissions": [
    "contextMenus",
    "tabs"
  ],
  "icons": {
    "16": "app/assets/images/app.png"
  }
}